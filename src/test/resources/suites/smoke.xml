<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="Smoke Suite" verbose="2">
    <groups>
        <run>
            <include name="Smoke"/>
        </run>
    </groups>

    <listeners>
        <listener class-name="utilities.listeners.TestListeners"/>
        <listener class-name="utilities.listeners.SuiteListeners"/>
    </listeners>

    <test name="checkout">
        <packages>
            <package name="checkout"/>
        </packages>
    </test>

    <test name="credentials">
        <packages>
            <package name="credentials"/>
        </packages>
    </test>

    <test name="shopping">
        <packages>
            <package name="shopping"/>
        </packages>
    </test>

    <test name="bars">
        <packages>
            <package name="bars"/>
        </packages>
    </test>
</suite>